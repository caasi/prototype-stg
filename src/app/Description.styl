.description
  position fixed
  width  100%
  height 100%
  background-image url('../images/Paris-Moyan-Brenn-cc-by-nd.jpg')
  background-size cover
  .content
    position absolute
    top    0
    left   0
    bottom 0
    right  0
    width  40rem
    height 480px
    margin auto
    padding 2rem
    border-radius 1rem
    background-color rgba(255,255,255,0.8)
    color #16161d
    h1
      font-size 1.6rem
    h2
      font-size 0.8rem
    h3
      font-weight bold
      margin-top 2rem
      margin-bottom 1rem
    p
      line-height 1.5rem
      margin-bottom 1rem
    table
      td
        height 1rem
        line-height 1rem
        padding 0.25rem
        &:first-child
          font-weight bold
          text-align right
    a.background-author
      position absolute
      right  1rem
      bottom 1rem
      color #666
      font-size 0.8rem
      text-decoration none
      &:hover
        text-decoration underline
